global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'nestjs-app'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['${APP_TARGET}']

  - job_name: 'pm2-metrics'
    fallback_scrape_protocol: PrometheusText0.0.4
    static_configs:
      - targets: ['${PM2_METRICS_TARGET}']
